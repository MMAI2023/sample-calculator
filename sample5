        .Range("B2:D26").Borders(xlEdgeRight).Color = RGB(0, 0, 0)
        .Range("B2:D26").Borders(xlEdgeTop).Weight = xlMedium
        .Range("B2:D26").Borders(xlEdgeTop).Color = RGB(0, 0, 0)
